<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height = "100dp"
    android:id="@+id/cvItemDev"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    app:cardCornerRadius = "5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/pxxanh"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="..."
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/txtNameDev"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtGammaDev"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorSecondPrimary"
                android:text="Imei: ..."
                android:textSize="@dimen/size12sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtNeutronDev"
                android:textColor="@color/colorSecondPrimary"
                android:text="Latitude: ..."
                android:textSize="@dimen/size12sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtCreatedDateDev"
                android:textColor="@color/colorSecondPrimary"
                android:text="Longitude: ..."
                android:textSize="@dimen/size12sp"
                />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>